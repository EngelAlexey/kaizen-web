---
import "../styles/global.css";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import { TASKS } from "../lib/routes";

interface Props {
	title: string;
	description?: string;
	lang?: "es" | "en";
	transparent?: boolean;
}

const {
	title,
	description = "Soluciones de software y Business Intelligence",
	lang = "es",
	transparent = false,
} = Astro.props;

const currentLang = lang as "es" | "en";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

let alternateLangUrl = "";
const alternateLang: "es" | "en" = currentLang === "es" ? "en" : "es";

for (const task of TASKS) {
	const slugCurrent = task.slug[currentLang];

	if (slugCurrent && Astro.url.pathname.includes(slugCurrent)) {
		const altSlug = task.slug[alternateLang];
		if (altSlug) {
			alternateLangUrl = new URL(
				alternateLang === "es" ? `/es/${altSlug}` : `/en/${altSlug}`,
				Astro.site,
			).toString();
		}
		break;
	}
}

if (
	!alternateLangUrl &&
	(Astro.url.pathname === "/" || Astro.url.pathname === "/en")
) {
	alternateLangUrl = new URL(
		alternateLang === "es" ? "/" : "/en",
		Astro.site,
	).toString();
}
---

<!doctype html>
<html lang={currentLang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Kaizen Apps</title>

		<link rel="canonical" href={canonicalURL} />
		{
			alternateLangUrl && (
				<link
					rel="alternate"
					hreflang={alternateLang}
					href={alternateLangUrl}
				/>
			)
		}

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap"
			rel="stylesheet"
		/>

		<ViewTransitions />

		<script is:inline>
			function initTheme() {
				const theme = (() => {
					if (
						typeof localStorage !== "undefined" &&
						localStorage.getItem("kaizen.dark")
					) {
						return localStorage.getItem("kaizen.dark") === "1"
							? "dark"
							: "light";
					}
					if (
						window.matchMedia("(prefers-color-scheme: dark)")
							.matches
					)
						return "dark";
					return "light";
				})();
				if (theme === "dark") {
					document.documentElement.classList.add("dark");
				} else {
					document.documentElement.classList.remove("dark");
				}
			}
			initTheme();
			document.addEventListener("astro:after-swap", initTheme);
		</script>
	</head>
	<body class="bg-background text-foreground overflow-x-hidden font-sans">
		<Header
			lang={currentLang}
			transparent={transparent}
			transition:persist
		/>
		<main>
			<slot />
		</main>
		<Footer transition:persist />
	</body>
</html>
