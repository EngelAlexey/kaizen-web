---
import "../styles/global.css";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import MobileMenuReact from "../components/common/MobileMenuReact.jsx";
import { ViewTransitions } from "astro:transitions";
import { TASKS } from "../lib/routes";
import { useTranslations } from "../utils/i18n";

interface Props {
	title: string;
	description?: string;
	lang?: "es" | "en";
	transparent?: boolean;
}

const {
	title,
	description = "Soluciones de software y Business Intelligence",
	lang = "es",
	transparent = false,
} = Astro.props;

const currentLang = lang as "es" | "en";
const t = useTranslations(currentLang);

// Reuse routeMap logic for React
const routeMap: Record<string, string> = {};
const addRoute = (pathEs: string, pathEn: string) => {
	routeMap[pathEs] = pathEn;
	routeMap[pathEn] = pathEs;
	if (!pathEs.endsWith("/")) routeMap[pathEs + "/"] = pathEn;
	if (!pathEn.endsWith("/")) routeMap[pathEn + "/"] = pathEs;
};

addRoute("/", "/en");
addRoute("/es", "/en");

const sectionMappings = [
	{ es: "/es/servicios", en: "/en/services" },
	{ es: "/es/nosotros", en: "/en/about" },
	{ es: "/es/testimonios", en: "/en/testimonials" },
	{ es: "/es/contacto", en: "/en/contact" },
];

sectionMappings.forEach(({ es, en }) => addRoute(es, en));

TASKS.forEach((task) => {
	if (task.slug.es && task.slug.en) {
		addRoute(`/es/${task.slug.es}`, `/en/${task.slug.en}`);
	}
});

const routeMapJson = JSON.stringify(routeMap);

// Simplify t for React (just the keys we need)
const tReact = {
	"nav.services": t("nav.services"),
	"nav.solutions": t("nav.solutions"),
	"nav.about": t("nav.about"),
	"nav.demo": t("nav.demo"),
	"module.assistance.title": t("module.assistance.title"),
	"module.rrhh.title": t("module.rrhh.title"),
	"module.projects.title": t("module.projects.title"),
	"module.ssoma.title": t("module.ssoma.title"),
	"module.payroll.title": t("module.payroll.title"),
	"module.assets.title": t("module.assets.title"),
	"hero.quote": t("hero.quote"),
};

const siteCanonicalURL = new URL(Astro.url.pathname, Astro.site);

let alternateLangUrl = "";
const alternateLang: "es" | "en" = currentLang === "es" ? "en" : "es";

for (const task of TASKS) {
	const slugCurrent = task.slug[currentLang];

	if (slugCurrent && Astro.url.pathname.includes(slugCurrent)) {
		const altSlug = task.slug[alternateLang];
		if (altSlug) {
			alternateLangUrl = new URL(
				alternateLang === "es" ? `/es/${altSlug}` : `/en/${altSlug}`,
				Astro.site,
			).toString();
		}
		break;
	}
}

if (
	!alternateLangUrl &&
	(Astro.url.pathname === "/" || Astro.url.pathname === "/en")
) {
	alternateLangUrl = new URL(
		alternateLang === "es" ? "/es/" : "/en/",
		Astro.site,
	).toString();
}
---

<!doctype html>
<html lang={currentLang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Kaizen Apps</title>

		<link rel="canonical" href={siteCanonicalURL} />
		{
			alternateLangUrl && (
				<link
					rel="alternate"
					hreflang={alternateLang}
					href={alternateLangUrl}
				/>
			)
		}

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap"
			rel="stylesheet"
		/>

		<ViewTransitions />

		<script is:inline>
			function initTheme() {
				const theme = (() => {
					if (
						typeof localStorage !== "undefined" &&
						localStorage.getItem("kaizen.dark")
					) {
						return localStorage.getItem("kaizen.dark") === "1"
							? "dark"
							: "light";
					}
					if (
						window.matchMedia("(prefers-color-scheme: dark)")
							.matches
					)
						return "dark";
					return "light";
				})();
				if (theme === "dark") {
					document.documentElement.classList.add("dark");
				} else {
					document.documentElement.classList.remove("dark");
				}
			}
			initTheme();
			document.addEventListener("astro:after-swap", initTheme);
		</script>
	</head>
	<body class="bg-background text-foreground overflow-x-hidden font-sans">
		<Header
			lang={currentLang}
			transparent={transparent}
			transition:persist
		/>
		<main>
			<slot />
		</main>
		<Footer lang={currentLang} transition:persist />
		<MobileMenuReact
			client:load
			transition:persist
			lang={currentLang}
			t={tReact}
			routeMapJson={routeMapJson}
			currentPath={Astro.url.pathname}
		/>
	</body>
</html>
