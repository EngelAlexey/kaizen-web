---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
	description?: string;
	lang?: "es" | "en";
	transparent?: boolean;
}

const {
	title,
	description = "Soluciones de software y Business Intelligence",
	lang = "es",
	transparent = false,
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Kaizen Apps</title>

		<script is:inline>
			const theme = (() => {
				if (
					typeof localStorage !== "undefined" &&
					localStorage.getItem("kaizen.dark")
				) {
					return localStorage.getItem("kaizen.dark") === "1"
						? "dark"
						: "light";
				}
				if (window.matchMedia("(prefers-color-scheme: dark)").matches)
					return "dark";
				return "light";
			})();
			if (theme === "dark")
				document.documentElement.classList.add("dark");
		</script>
	</head>
	<body
		class="bg-background text-foreground transition-colors duration-300 overflow-x-hidden font-sans"
	>
		<Header lang={lang} transparent={transparent} />
		<slot />
		<Footer />
	</body>
</html>
