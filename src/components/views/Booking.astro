---
import { useTranslations } from "../../utils/i18n";
import { Users, Info, Sparkles, CheckCircle2 } from "lucide-react";
import { Image } from "astro:assets";
import KaizenLogo from "../../assets/img/K.png";
import SeiriLogo from "../../assets/img/seiri-logo.png";
import BaycoBlack from "../../assets/img/bayco-logo-black.png";
import BaycoWhite from "../../assets/img/bayco-logo-white.png";

const { lang } = Astro.props;
const t = useTranslations((lang as "es" | "en") || "es");
---

<section
    class="relative pt-32 pb-24 px-6 min-h-screen flex items-center justify-center bg-muted/5"
>
    <div class="absolute inset-0 -z-10 overflow-hidden">
        <div
            class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/5 rounded-full blur-[100px] transform translate-x-1/2 -translate-y-1/2"
        >
        </div>
        <div
            class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-blue/5 rounded-full blur-[100px] transform -translate-x-1/2 translate-y-1/2"
        >
        </div>
    </div>

    <div class="w-full max-w-5xl mx-auto grid lg:grid-cols-2 gap-16">
        <div class="space-y-8 animate-fade-right">
            <div>
                <span
                    class="inline-block py-1 px-3 rounded-full bg-primary/10 text-primary font-bold tracking-widest uppercase text-xs mb-6 border border-primary/20"
                >
                    {t("nav.demo")}
                </span>
                <h1 class="text-4xl md:text-5xl font-bold mb-6 text-foreground">
                    {t("booking.title")}
                </h1>
                <p class="text-xl text-muted leading-relaxed">
                    {t("booking.subtitle")}
                </p>
            </div>

            <!-- AI Note -->
            <div
                class="p-6 rounded-2xl bg-gradient-to-br from-purple/10 to-blue/10 border border-purple/20 flex gap-4"
            >
                <div
                    class="w-10 h-10 rounded-full bg-white dark:bg-gray-800 flex items-center justify-center text-purple shadow-sm shrink-0"
                >
                    <Sparkles size={20} />
                </div>
                <div>
                    <p class="font-bold text-foreground mb-1">AI Integrated</p>
                    <p class="text-sm text-muted">{t("booking.ai.note")}</p>
                </div>
            </div>

            <div class="space-y-4">
                <div class="flex items-center gap-3 text-muted">
                    <CheckCircle2 className="text-primary w-5 h-5" />
                    <span>{t("stats.uptime")}</span>
                </div>
                <div class="flex items-center gap-3 text-muted">
                    <CheckCircle2 className="text-primary w-5 h-5" />
                    <span>{t("hero.badge.sys")}</span>
                </div>
            </div>
        </div>

        <!-- Booking Form -->
        <div
            class="bg-panel p-8 md:p-10 rounded-3xl shadow-strong border border-border animate-fade-left"
        >
            <form class="space-y-6">
                <div class="grid md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label class="text-sm font-bold text-foreground ml-1"
                            >{t("booking.form.name")}</label
                        >
                        <input
                            type="text"
                            required
                            class="w-full px-4 py-3 rounded-xl bg-background border border-border focus:border-primary focus:ring-4 focus:ring-primary/10 transition-all outline-none"
                            placeholder="John Doe"
                        />
                    </div>
                    <div class="space-y-2">
                        <label class="text-sm font-bold text-foreground ml-1"
                            >{t("booking.form.email")}</label
                        >
                        <input
                            type="email"
                            required
                            class="w-full px-4 py-3 rounded-xl bg-background border border-border focus:border-primary focus:ring-4 focus:ring-primary/10 transition-all outline-none"
                            placeholder="john@company.com"
                        />
                    </div>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label class="text-sm font-bold text-foreground ml-1"
                            >{t("booking.form.phone")}</label
                        >
                        <input
                            type="tel"
                            required
                            class="w-full px-4 py-3 rounded-xl bg-background border border-border focus:border-primary focus:ring-4 focus:ring-primary/10 transition-all outline-none"
                            placeholder="+1 234 567 890"
                        />
                    </div>
                    <div class="space-y-2">
                        <label class="text-sm font-bold text-foreground ml-1"
                            >{t("booking.form.role")}</label
                        >
                        <input
                            type="text"
                            class="w-full px-4 py-3 rounded-xl bg-background border border-border focus:border-primary focus:ring-4 focus:ring-primary/10 transition-all outline-none"
                            placeholder="CEO, Manager..."
                        />
                    </div>
                </div>

                <div class="space-y-2">
                    <label class="text-sm font-bold text-foreground ml-1"
                        >{t("booking.form.company")}</label
                    >
                    <input
                        type="text"
                        required
                        class="w-full px-4 py-3 rounded-xl bg-background border border-border focus:border-primary focus:ring-4 focus:ring-primary/10 transition-all outline-none"
                        placeholder="Company Name"
                    />
                </div>

                <div class="space-y-3 pt-2">
                    <label class="text-sm font-bold text-foreground ml-1"
                        >{t("booking.form.product")}</label
                    >
                    <div class="space-y-3">
                        <!-- Kaizen Option -->
                        <label
                            class="relative flex items-start gap-4 p-4 rounded-xl border border-border cursor-pointer hover:border-primary/50 hover:bg-primary/5 transition-all group"
                        >
                            <input
                                type="checkbox"
                                name="product[]"
                                value="kaizen"
                                class="mt-1 w-4 h-4 text-primary border-border focus:ring-primary rounded"
                            />
                            <div class="flex-1">
                                <div class="flex items-center gap-2 mb-1">
                                    <Image
                                        src={KaizenLogo}
                                        alt="Kaizen"
                                        class="h-5 w-auto object-contain"
                                    />
                                    <span
                                        class="font-bold text-foreground group-hover:text-primary transition-colors"
                                        >{t("booking.product.kaizen")}</span
                                    >
                                </div>
                                <span class="text-xs text-muted"
                                    >{t("booking.product.kaizen.desc")}</span
                                >
                            </div>
                        </label>

                        <!-- Seiri Option -->
                        <label
                            class="relative flex items-start gap-4 p-4 rounded-xl border border-border cursor-pointer hover:border-emerald/50 hover:bg-emerald/5 transition-all group"
                        >
                            <input
                                type="checkbox"
                                name="product[]"
                                value="seiri"
                                class="mt-1 w-4 h-4 text-emerald border-border focus:ring-emerald rounded"
                            />
                            <div class="flex-1">
                                <div class="flex items-center gap-2 mb-1">
                                    <Image
                                        src={SeiriLogo}
                                        alt="Seiri"
                                        class="h-5 w-auto object-contain"
                                    />
                                    <span
                                        class="font-bold text-foreground group-hover:text-emerald transition-colors"
                                        >{t("booking.product.seiri")}</span
                                    >
                                </div>
                                <span class="text-xs text-muted"
                                    >{t("booking.product.seiri.desc")}</span
                                >
                            </div>
                        </label>

                        <!-- BayCo Option -->
                        <label
                            class="relative flex items-start gap-4 p-4 rounded-xl border border-border cursor-pointer hover:border-orange-500/50 hover:bg-orange-500/5 transition-all group"
                        >
                            <input
                                type="checkbox"
                                name="product[]"
                                value="bayco"
                                class="mt-1 w-4 h-4 text-orange-500 border-border focus:ring-orange-500 rounded"
                            />
                            <div class="flex-1">
                                <div class="flex items-center gap-2 mb-1">
                                    <div
                                        class="h-5 w-auto dark:hidden"
                                        style={{ filter: "brightness(0)" }}
                                    >
                                        <Image
                                            src={BaycoBlack}
                                            alt="BayCo"
                                            class="h-full w-auto object-contain"
                                        />
                                    </div>
                                    <Image
                                        src={BaycoWhite}
                                        alt="BayCo"
                                        class="h-5 w-auto object-contain hidden dark:block"
                                    />
                                    <span
                                        class="font-bold text-foreground group-hover:text-orange-500 transition-colors"
                                        >{t("booking.product.bayco")}</span
                                    >
                                </div>
                                <span class="text-xs text-muted"
                                    >{t("booking.product.bayco.desc")}</span
                                >
                            </div>
                        </label>
                    </div>
                </div>

                <button
                    type="submit"
                    class="w-full btn-primary py-4 rounded-xl font-bold text-lg shadow-lg hover:shadow-primary/25 mt-4"
                >
                    {t("booking.form.submit")}
                </button>
            </form>
        </div>
    </div>
</section>
