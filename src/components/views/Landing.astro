---
import { useTranslations } from "../../utils/i18n";
import type { ui } from "../../i18n/ui";

interface Props {
    lang: keyof typeof ui;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<!-- HERO SECTION -->
<section
    class="relative pt-32 pb-16 lg:pt-40 lg:pb-24 px-6 overflow-hidden min-h-screen flex items-center"
>
    <!-- Background Elements -->
    <div class="absolute inset-0 -z-10">
        <div
            class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/5 rounded-full blur-3xl opacity-50"
        >
        </div>
        <div
            class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-blue/5 rounded-full blur-3xl opacity-50"
        >
        </div>
    </div>

    <div class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-16 items-center">
        <!-- Text Content -->
        <div class="relative z-10 animate-fade-up animate-duration-700">
            <span
                class="inline-block py-1 px-3 rounded-full bg-primary/10 text-primary font-bold tracking-widest uppercase text-xs mb-6 border border-primary/20"
            >
                {t("hero.badge")}
            </span>

            <h1
                class="text-5xl lg:text-7xl font-bold leading-tight mb-6 text-foreground tracking-tight"
            >
                Kaizen <span class="text-primary">{t("hero.title")}</span>
            </h1>

            <p class="text-xl text-muted leading-relaxed mb-8 max-w-lg">
                {t("hero.desc")}
            </p>

            <div class="flex flex-col sm:flex-row gap-4">
                <a
                    href="#contacto"
                    class="btn-primary px-8 py-4 rounded-xl font-bold text-lg shadow-lg hover:shadow-primary/25"
                >
                    {t("hero.quote")}
                </a>
                <a
                    href="#soluciones"
                    class="btn-secondary px-8 py-4 rounded-xl font-bold text-lg"
                >
                    {t("hero.solutions")}
                </a>
            </div>
        </div>

        <!-- Image Composition (Cluster) -->
        <div
            class="relative lg:h-[600px] flex items-center justify-center animate-fade-left animate-delay-300"
        >
            <!-- Decorative Back Shape -->
            <div
                class="absolute top-10 right-10 w-[80%] h-[80%] border-2 border-primary/20 rounded-3xl transform rotate-6 z-0 hidden lg:block"
            >
            </div>

            <!-- Main Image -->
            <div
                class="relative z-10 w-full max-w-[550px] aspect-[4/3] rounded-2xl overflow-hidden shadow-strong border border-border bg-panel group"
            >
                <img
                    src="/src/assets/img/imagen1.jpeg"
                    alt="Dashboard Kaizen"
                    class="object-cover w-full h-full transform transition-transform duration-700 group-hover:scale-105"
                />

                <!-- Floating UI Badge -->
                <div
                    class="absolute bottom-6 left-6 right-6 bg-panel/90 backdrop-blur-md p-4 rounded-xl border border-border shadow-lg flex items-center gap-4"
                >
                    <div
                        class="w-10 h-10 rounded-full bg-emerald-100 dark:bg-emerald-900/30 text-emerald-600 flex items-center justify-center"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-6 h-6"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><polyline points="20 6 9 17 4 12"></polyline></svg
                        >
                    </div>
                    <div>
                        <p class="text-sm font-bold text-foreground">
                            {t("hero.badge.sys")}
                        </p>
                        <p class="text-xs text-emerald-600 font-medium">
                            {t("hero.badge.opt")}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ABOUT / IMPACT SECTION (New - Alternating Background) -->
<section class="py-24 bg-muted/5 relative border-y border-border/50">
    <div class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-20 items-center px-6">
        <!-- Visual Composition -->
        <div class="relative order-2 lg:order-1">
            <div
                class="relative z-10 rounded-2xl overflow-hidden shadow-2xl border border-border"
            >
                <img
                    src="/src/assets/img/imagen2.jpg"
                    alt="Equipo Kaizen"
                    class="w-full h-auto object-cover opacity-90 hover:opacity-100 transition-opacity"
                />
            </div>
            <!-- Overlapping Element -->
            <div
                class="absolute -bottom-10 -right-10 w-2/3 rounded-xl overflow-hidden shadow-strong border-4 border-panel z-20 hidden lg:block"
            >
                <img
                    src="/src/assets/img/imagen3.jpg"
                    alt="Detalle Operativo"
                    class="w-full h-auto object-cover"
                />
            </div>
            <!-- Back Shape -->
            <div
                class="absolute -top-6 -left-6 w-full h-full bg-blue/5 rounded-3xl -z-10 transform -rotate-3"
            >
            </div>
        </div>

        <!-- Text Content -->
        <div class="order-1 lg:order-2">
            <h3
                class="text-blue font-bold tracking-widest uppercase text-sm mb-4"
            >
                {t("about.overline")}
            </h3>
            <h2 class="text-4xl font-bold mb-6 text-foreground leading-tight">
                {t("about.title1")}
                <br />
                <span class="text-primary">{t("about.title2")}</span>
            </h2>
            <p class="text-muted text-lg mb-6 leading-relaxed">
                {t("about.desc1")}
            </p>
            <p class="text-muted mb-8 leading-relaxed">
                {t("about.desc2")}
            </p>

            <div class="grid grid-cols-2 gap-6">
                <div class="border-l-4 border-primary pl-4">
                    <h4 class="font-bold text-xl mb-1">+500</h4>
                    <p class="text-sm text-muted">{t("stats.companies")}</p>
                </div>
                <div class="border-l-4 border-blue pl-4">
                    <h4 class="font-bold text-xl mb-1">99.9%</h4>
                    <p class="text-sm text-muted">{t("stats.uptime")}</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FEATURES SECTION (Preserved) -->
<section id="soluciones" class="py-20 px-6">
    <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-3 gap-8">
            <!-- Feature 1 -->
            <div
                class="group relative p-8 rounded-3xl bg-panel border-2 border-border/50 hover:border-blue/50 transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
            >
                <div
                    class="absolute inset-0 bg-blue/5 opacity-0 group-hover:opacity-100 transition-opacity rounded-3xl"
                >
                </div>
                <div
                    class="w-14 h-14 bg-blue/10 rounded-2xl flex items-center justify-center mb-6 text-blue Group-hover:scale-110 transition-transform"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-7 h-7"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path
                            d="M12 2v20M2 12h20M12 2a10 10 0 0 1 10 10 10 10 0 0 1-10 10 10 10 0 0 1-10-10 10 10 0 0 1 10-10Z"
                        ></path></svg
                    >
                </div>
                <h3 class="text-2xl font-bold mb-3">{t("features.g.title")}</h3>
                <p class="text-muted leading-relaxed">{t("features.g.desc")}</p>
            </div>

            <!-- Feature 2 -->
            <div
                class="group relative p-8 rounded-3xl bg-panel border-2 border-border/50 hover:border-purple/50 transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
            >
                <div
                    class="absolute inset-0 bg-purple/5 opacity-0 group-hover:opacity-100 transition-opacity rounded-3xl"
                >
                </div>
                <div
                    class="w-14 h-14 bg-purple/10 rounded-2xl flex items-center justify-center mb-6 text-purple group-hover:scale-110 transition-transform"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-7 h-7"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"
                        ></path><polyline points="22 4 12 14.01 9 11.01"
                        ></polyline></svg
                    >
                </div>
                <h3 class="text-2xl font-bold mb-3">{t("features.s.title")}</h3>
                <p class="text-muted leading-relaxed">{t("features.s.desc")}</p>
            </div>

            <!-- Feature 3 -->
            <div
                class="group relative p-8 rounded-3xl bg-panel border-2 border-border/50 hover:border-emerald/50 transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
            >
                <div
                    class="absolute inset-0 bg-emerald/5 opacity-0 group-hover:opacity-100 transition-opacity rounded-3xl"
                >
                </div>
                <div
                    class="w-14 h-14 bg-emerald/10 rounded-2xl flex items-center justify-center mb-6 text-emerald group-hover:scale-110 transition-transform"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-7 h-7"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><rect x="2" y="3" width="20" height="14" rx="2" ry="2"
                        ></rect><line x1="8" y1="21" x2="16" y2="21"
                        ></line><line x1="12" y1="17" x2="12" y2="21"
                        ></line></svg
                    >
                </div>
                <h3 class="text-2xl font-bold mb-3">{t("features.f.title")}</h3>
                <p class="text-muted leading-relaxed">{t("features.f.desc")}</p>
            </div>
        </div>
    </div>
</section>
