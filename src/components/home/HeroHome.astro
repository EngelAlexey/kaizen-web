---
import { useTranslations } from "../../utils/i18n";
import type { ui } from "../../i18n/ui";
import { Image } from "astro:assets";
import HeroImage from "../../assets/ilustration/Hero-portfolio.svg";

interface Props {
    lang: keyof typeof ui;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section
    id="inicio"
    class="relative pt-24 pb-20 lg:pt-36 lg:pb-32 px-6 overflow-hidden"
>
    <div class="absolute inset-0 z-0 pointer-events-none">
        <div
            class="absolute inset-0 bg-[linear-gradient(to_right,#00000005_1px,transparent_1px),linear-gradient(to_bottom,#00000005_1px,transparent_1px)] dark:bg-[linear-gradient(to_right,#ffffff05_1px,transparent_1px),linear-gradient(to_bottom,#ffffff05_1px,transparent_1px)] bg-[size:24px_24px] [mask-image:radial-gradient(ellipse_80%_80%_at_50%_0%,#000_70%,transparent_100%)]"
        >
        </div>

        <div
            class="absolute top-[-10%] right-[-5%] w-[600px] h-[600px] bg-gradient-to-br from-primary/30 to-purple/30 rounded-full blur-[100px] opacity-40 dark:opacity-70 animate-pulse"
            style="animation-duration: 4s;"
        >
        </div>
        <div
            class="absolute bottom-[-10%] left-[-5%] w-[600px] h-[600px] bg-gradient-to-tr from-blue/30 to-emerald/30 rounded-full blur-[100px] opacity-40 dark:opacity-70 animate-pulse"
            style="animation-duration: 5s;"
        >
        </div>
    </div>

    <div class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-16 items-center">
        <div class="relative z-10 animate-fade-up animate-duration-700">
            <span
                class="inline-block py-1 px-3 rounded-full bg-primary/10 text-primary font-bold tracking-widest uppercase text-xs mb-6 border border-primary/20"
            >
                {t("hero.badge")}
            </span>

            <h1
                class="text-5xl lg:text-7xl font-bold leading-tight mb-6 text-foreground tracking-tight"
            >
                Kaizen <span class="text-primary">{t("hero.title")}</span>
            </h1>

            <p class="text-xl text-muted leading-relaxed mb-8 max-w-lg">
                {t("hero.desc")}
            </p>

            <div class="flex flex-col sm:flex-row gap-4">
                <a
                    href={lang === "es" ? "/es/agendar" : "/en/booking"}
                    class="btn-primary px-8 py-4 rounded-xl font-bold text-lg shadow-lg hover:shadow-primary/25"
                >
                    {t("hero.quote")}
                </a>
                <a
                    href={lang === "es" ? "#servicios" : "#services"}
                    class="btn-secondary px-8 py-4 rounded-xl font-bold text-lg"
                >
                    {t("hero.solutions")}
                </a>
            </div>
        </div>

        <div
            class="relative lg:h-[600px] flex items-center justify-center animate-fade-left animate-delay-300"
        >
            <div
                class="absolute top-10 right-10 w-[80%] h-[80%] border-2 border-primary/60 rounded-3xl transform rotate-6 z-0 hidden lg:block"
            >
            </div>

            <div
                class="relative z-10 w-full max-w-[550px] aspect-[4/3] rounded-2xl overflow-hidden shadow-strong border border-border bg-panel group"
            >
                <Image
                    src={HeroImage}
                    alt="Dashboard Kaizen"
                    class="object-cover w-full h-full transform transition-transform duration-700 group-hover:scale-105"
                />

                <div
                    class="absolute bottom-6 left-6 right-6 glass p-4 rounded-xl shadow-lg flex items-center gap-4 animate-fade-up animate-delay-700"
                >
                    <div
                        class="w-10 h-10 rounded-full bg-emerald-100 dark:bg-emerald-900/50 text-emerald-600 dark:text-emerald-400 flex items-center justify-center"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-6 h-6"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><polyline points="20 6 9 17 4 12"></polyline></svg
                        >
                    </div>
                    <div>
                        <p class="text-sm font-bold text-foreground">
                            {t("hero.badge.sys")}
                        </p>
                        <p
                            class="text-xs text-emerald-600 dark:text-emerald-400 font-medium"
                        >
                            {t("hero.badge.opt")}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
