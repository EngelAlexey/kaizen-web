---
import { useTranslations } from "../../utils/i18n";
import type { ui } from "../../i18n/ui";
import ClientLogos from "../sections/ClientLogos.astro";

// Import logos properly so Astro processes them
import createLogo from "../../assets/icons/create-logo.png";
import grupoLogo from "../../assets/icons/grupo-logo.png";
import saumaLogo from "../../assets/icons/sauma-logo-black.png";
import mazLogo from "../../assets/icons/maz-logo-white.svg";
import voltaLogo from "../../assets/icons/volta-logo-white.png";
import constrialLogo from "../../assets/icons/Constrial-logo.webp";
import starCargoLogo from "../../assets/icons/logo_vertical_c.png";
import girsLogo from "../../assets/icons/girs-logo.png";

interface Props {
    lang: keyof typeof ui;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const clientLogos = [
    {
        src: createLogo.src,
        alt: "Creative Engineering",
        href: "https://www.create-cr.com/",
    },
    {
        src: grupoLogo.src,
        alt: "Grupo Creativo",
        href: "https://www.grupocreativo-cr.com/",
    },
    {
        src: saumaLogo.src,
        alt: "Sauma Arquitectos",
        href: "https://saumaarquitectos.com/",
    },
    {
        src: mazLogo.src,
        alt: "MAZ",
        href: "https://www.maz-cr.com/",
    },
    {
        src: voltaLogo.src,
        alt: "Volta",
        href: "https://voltacr.com/",
    },
    {
        src: constrialLogo.src,
        alt: "Constrial",
        href: "https://constrial.net/",
    },
    {
        src: starCargoLogo.src,
        alt: "Star Cargo",
        href: "https://www.starcargoservice.com/",
    },
    {
        src: girsLogo.src,
        alt: "GIRS",
        href: "https://www.girscr.com/",
    },
];
---

<section
    id="nuestros-clientes"
    class="py-16 bg-panel border-y border-border overflow-hidden"
>
    <div class="max-w-7xl mx-auto px-6 text-center mb-10">
        <h3 class="text-2xl font-bold opacity-80">
            {t("stats.companies")}
        </h3>
    </div>

    <div class="relative w-full">
        <div
            class="flex w-max gap-12 animate-scroll-x hover:pause items-center"
        >
            <ClientLogos logos={clientLogos} />
            <ClientLogos logos={clientLogos} />
        </div>

        <div
            class="absolute top-0 left-0 w-24 h-full bg-gradient-to-r from-panel to-transparent z-10 pointer-events-none"
        >
        </div>
        <div
            class="absolute top-0 right-0 w-24 h-full bg-gradient-to-l from-panel to-transparent z-10 pointer-events-none"
        >
        </div>
    </div>
</section>
