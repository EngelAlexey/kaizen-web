---
import { useTranslations } from "../../utils/i18n";
import type { ui } from "../../i18n/ui";
import { Briefcase, Layers, Maximize } from "lucide-react";
import FeatureCard from "../cards/FeatureCard.astro";

interface Props {
    lang: keyof typeof ui;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const features = [
    {
        Icon: Briefcase,
        color: "blue" as const,
        titleKey: "features.g.title",
        descKey: "features.g.desc",
    },
    {
        Icon: Layers,
        color: "purple" as const,
        titleKey: "features.s.title",
        descKey: "features.s.desc",
    },
    {
        Icon: Maximize,
        color: "emerald" as const,
        titleKey: "features.f.title",
        descKey: "features.f.desc",
    },
];
---

<section
    id="nosotros"
    class="py-24 border-y border-border relative overflow-hidden"
>
    <div class="absolute inset-0 z-0 pointer-events-none">
        <div
            class="absolute inset-0 bg-[linear-gradient(to_right,#00000005_1px,transparent_1px),linear-gradient(to_bottom,#00000005_1px,transparent_1px)] dark:bg-[linear-gradient(to_right,#ffffff05_1px,transparent_1px),linear-gradient(to_bottom,#ffffff05_1px,transparent_1px)] bg-[size:24px_24px] [mask-image:radial-gradient(ellipse_80%_80%_at_50%_0%,#000_70%,transparent_100%)]"
        >
        </div>
    </div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="grid md:grid-cols-2 gap-16 items-center mb-20">
            <div>
                <h2 class="text-3xl md:text-5xl font-bold mb-6">
                    {t("about.kaizen.title")}
                </h2>
                <div class="space-y-4 text-lg text-muted">
                    <p set:html={t("about.kaizen.desc1")} />
                    <p>
                        {t("about.kaizen.desc2")}
                    </p>
                </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div
                    class="bg-background p-6 rounded-2xl shadow-sm border border-border flex flex-col items-center text-center"
                >
                    <span class="text-4xl font-bold text-primary mb-2"
                        >+500</span
                    >
                    <span class="text-sm text-muted"
                        >{t("stats.companies")}</span
                    >
                </div>
                <div
                    class="bg-background p-6 rounded-2xl shadow-sm border border-border flex flex-col items-center text-center"
                >
                    <span class="text-4xl font-bold text-primary mb-2"
                        >99.9%</span
                    >
                    <span class="text-sm text-muted">{t("stats.uptime")}</span>
                </div>
                <div
                    class="col-span-2 h-48 bg-gray-200 dark:bg-gray-800 rounded-2xl overflow-hidden"
                >
                    <img
                        src="/src/assets/img/imagen2.jpg"
                        class="w-full h-full object-cover opacity-80 hover:scale-105 transition-transform"
                    />
                </div>
            </div>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            {
                features.map((feature) => (
                    <FeatureCard
                        Icon={feature.Icon}
                        color={feature.color}
                        title={t(feature.titleKey as any)}
                        description={t(feature.descKey as any)}
                    />
                ))
            }
        </div>
    </div>
</section>
