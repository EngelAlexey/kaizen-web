---
import { useTranslations } from "../../utils/i18n";
import type { ui } from "../../i18n/ui";
import AppCard from "../cards/AppCard.astro";
import KaizenLogo from "../../assets/img/K.png";
import SeiriLogo from "../../assets/img/seiri-logo.png";
import BaycoBlack from "../../assets/img/bayco-logo-black.png";
import BaycoWhite from "../../assets/img/bayco-logo-white.png";

interface Props {
    lang: keyof typeof ui;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section
    id={lang === "es" ? "servicios" : "services"}
    class="py-24 px-6 relative overflow-hidden"
>
    <div class="absolute inset-0 z-0 pointer-events-none">
        <div
            class="absolute inset-0 bg-[linear-gradient(to_right,#00000005_1px,transparent_1px),linear-gradient(to_bottom,#00000005_1px,transparent_1px)] dark:bg-[linear-gradient(to_right,#ffffff05_1px,transparent_1px),linear-gradient(to_bottom,#ffffff05_1px,transparent_1px)] bg-[size:24px_24px] [mask-image:radial-gradient(ellipse_80%_80%_at_50%_0%,#000_70%,transparent_100%)]"
        >
        </div>

        <div
            class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/5 rounded-full blur-[100px] transform translate-x-1/2 -translate-y-1/2"
        >
        </div>
        <div
            class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-blue/5 rounded-full blur-[100px] transform -translate-x-1/2 translate-y-1/2"
        >
        </div>
    </div>

    <div class="max-w-7xl mx-auto relative z-10">
        <div class="text-center mb-16 animate-fade-up">
            <h2 class="text-3xl md:text-5xl font-bold mb-6 text-foreground">
                {t("apps.title")}
            </h2>
            <p class="text-muted text-lg max-w-2xl mx-auto">
                {t("apps.subtitle")}
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            <AppCard
                href="https://kaizenapps.net/app"
                logo={KaizenLogo}
                logoAlt="Kaizen"
                title={t("apps.hr")}
                description={t("apps.hr.desc")}
                ctaText={t("apps.cta")}
                color="red"
            />

            <AppCard
                href="https://kaizenapps.net/bayco"
                logo={BaycoBlack}
                logoDark={BaycoWhite}
                logoAlt="BayCo"
                title={t("apps.bayco")}
                description={t("apps.bayco.desc")}
                ctaText={t("apps.cta")}
                color="orange"
            />

            <AppCard
                href="https://kaizenapps.net/gpt"
                isGpt={true}
                logoAlt="GPT"
                title={t("apps.gpt")}
                description={t("apps.gpt.desc")}
                ctaText={t("apps.cta")}
                color="red"
            />

            <AppCard
                href="https://kaizenapps.net/seiri"
                logo={SeiriLogo}
                logoAlt="Seiri"
                title={t("apps.seiri")}
                description={t("apps.seiri.desc")}
                ctaText={t("apps.cta")}
                color="red"
            />

            <AppCard
                href="#"
                logo={KaizenLogo}
                logoAlt="Anzen"
                title={t("apps.anzen")}
                description={t("apps.anzen.desc")}
                ctaText={t("apps.cta")}
                color="red"
                badgeText={t("apps.dev")}
                disabled={true}
            />
        </div>
    </div>
</section>
