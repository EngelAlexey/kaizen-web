---
import { useTranslations } from "../../utils/i18n";
import { Image } from "astro:assets";
import SeiriLogo from "../../assets/img/seiri-logo.png";
import AttendanceImage from "../../assets/ilustration/attendances-control.svg";
import { CheckCircle2, Clock } from "lucide-react";

interface Props {
    lang: "es" | "en";
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<div class="max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
            <div class="flex items-center gap-3 mb-6">
                <div
                    class="w-12 h-12 rounded-xl bg-orange-100 dark:bg-orange-900/30 text-orange-600 flex items-center justify-center p-2"
                >
                    <Image
                        src={SeiriLogo}
                        alt="Seiri"
                        class="w-full h-full object-contain"
                    />
                </div>
                <h2 class="text-3xl font-bold text-foreground">
                    {t("module.assistance.title")}
                </h2>
            </div>

            <p
                class="text-lg text-muted mb-8 italic border-l-4 border-orange-500 pl-4"
            >
                {t("module.assistance.subtitle")}
            </p>

            <div class="space-y-8">
                <div>
                    <h3 class="text-xl font-bold mb-3">
                        {t("module.assistance.what.title")}
                    </h3>
                    <p
                        class="text-muted leading-relaxed"
                        set:html={t("module.assistance.what.desc")}
                    />
                </div>

                <div>
                    <h3 class="text-xl font-bold mb-4">
                        {t("module.assistance.use.title")}
                    </h3>
                    <ul class="space-y-4">
                        {
                            [1, 2, 3, 4, 5].map((num) => (
                                <li class="flex gap-4">
                                    <div class="mt-1 min-w-[20px]">
                                        <CheckCircle2 className="w-5 h-5 text-emerald-500" />
                                    </div>
                                    <div>
                                        <h4 class="font-bold text-foreground">
                                            {t(
                                                `module.assistance.use.${num}.title` as any,
                                            )}
                                        </h4>
                                        <p class="text-sm text-muted">
                                            {t(
                                                `module.assistance.use.${num}.desc` as any,
                                            )}
                                        </p>
                                    </div>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="relative">
            <div
                class="absolute inset-0 bg-gradient-to-tr from-orange-500/10 to-transparent rounded-3xl transform rotate-3 scale-105 -z-10"
            >
            </div>
            <Image
                src={AttendanceImage}
                alt="Attendance Control"
                class="w-full h-auto object-contain relative z-10 hover:scale-105 transition-transform duration-500"
            />
        </div>
    </div>
</div>
