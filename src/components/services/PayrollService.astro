---
import { useTranslations } from "../../utils/i18n";
import { CheckCircle2 } from "lucide-react";
import { Image } from "astro:assets";
import PayrollImage from "../../assets/ilustration/payroll-finances.svg";
import IconApp from "../../assets/img/Icon App.png";

interface Props {
    lang: "es" | "en";
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<div class="max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
            <div class="flex items-center gap-3 mb-6">
                <div
                    class="w-12 h-12 rounded-xl bg-emerald/10 text-emerald flex items-center justify-center p-2"
                >
                    <Image
                        src={IconApp}
                        alt="Kaizen"
                        class="w-full h-full object-contain"
                    />
                </div>
                <h2 class="text-3xl font-bold text-foreground">
                    {t("module.payroll.title")}
                </h2>
            </div>
            <p
                class="text-lg text-muted mb-8 italic border-l-4 border-emerald pl-4"
            >
                {t("module.payroll.subtitle")}
            </p>
            <div class="space-y-8">
                <div>
                    <h3 class="text-xl font-bold mb-3">
                        {t("module.payroll.what.title")}
                    </h3>
                    <p
                        class="text-muted leading-relaxed"
                        set:html={t("module.payroll.what.desc")}
                    />
                </div>
                <div>
                    <h3 class="text-xl font-bold mb-4">
                        {t("module.payroll.use.title")}
                    </h3>
                    <ul class="space-y-4">
                        {
                            [1, 2, 3, 4].map((num) => (
                                <li class="flex gap-4">
                                    <div class="mt-1 min-w-[20px]">
                                        <CheckCircle2 className="w-5 h-5 text-emerald" />
                                    </div>
                                    <div>
                                        <h4 class="font-bold text-foreground">
                                            {t(
                                                `module.payroll.use.${num}.title` as any,
                                            )}
                                        </h4>
                                        <p class="text-sm text-muted">
                                            {t(
                                                `module.payroll.use.${num}.desc` as any,
                                            )}
                                        </p>
                                    </div>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="relative">
            <div
                class="absolute inset-0 bg-gradient-to-tr from-emerald/10 to-transparent rounded-3xl transform rotate-3 scale-105 -z-10"
            >
            </div>
            <Image
                src={PayrollImage}
                alt="Payroll & Finances"
                class="w-full h-auto object-contain relative z-10 hover:scale-105 transition-transform duration-500"
            />
        </div>
    </div>
</div>
