---
import { useTranslations } from "../../utils/i18n";
import { Image } from "astro:assets";
import BaycoBlack from "../../assets/img/bayco-logo-black.png";
import BaycoWhite from "../../assets/img/bayco-logo-white.png";
import { CheckCircle2, Briefcase } from "lucide-react";

interface Props {
    lang: "es" | "en";
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<div class="max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="relative order-2 lg:order-1">
            <div
                class="absolute inset-0 bg-gradient-to-tl from-yellow-500/10 to-transparent rounded-3xl transform -rotate-3 scale-105 -z-10"
            >
            </div>
            <div
                class="bg-panel border border-border rounded-2xl p-8 shadow-xl"
            >
                <div
                    class="aspect-video bg-muted/10 rounded-lg flex items-center justify-center border border-dashed border-border mb-6"
                >
                    <Briefcase className="w-16 h-16 text-muted/30" />
                </div>
                <div class="space-y-3">
                    <div class="h-2 bg-muted/10 rounded w-3/4"></div>
                    <div class="h-2 bg-muted/10 rounded w-1/2"></div>
                    <div class="h-2 bg-muted/10 rounded w-full"></div>
                </div>
            </div>
        </div>

        <div class="order-1 lg:order-2">
            <div class="flex items-center gap-3 mb-6">
                <div
                    class="w-12 h-12 rounded-xl bg-yellow-500/10 text-yellow-600 flex items-center justify-center p-2"
                >
                    <div
                        class="h-full w-full dark:hidden"
                        style={{ filter: "brightness(0)" }}
                    >
                        <Image
                            src={BaycoBlack}
                            alt="BayCo"
                            class="w-full h-full object-contain"
                        />
                    </div>
                    <Image
                        src={BaycoWhite}
                        alt="BayCo"
                        class="w-full h-full object-contain hidden dark:block"
                    />
                </div>
                <h2 class="text-3xl font-bold text-foreground">
                    {t("module.assets.title")}
                </h2>
            </div>
            <p
                class="text-lg text-muted mb-8 italic border-l-4 border-yellow-500 pl-4"
            >
                {t("module.assets.subtitle")}
            </p>
            <div class="space-y-8">
                <div>
                    <h3 class="text-xl font-bold mb-3">
                        {t("module.assets.what.title")}
                    </h3>
                    <p
                        class="text-muted leading-relaxed"
                        set:html={t("module.assets.what.desc")}
                    />
                </div>
                <div>
                    <h3 class="text-xl font-bold mb-4">
                        {t("module.assets.use.title")}
                    </h3>
                    <ul class="space-y-4">
                        {
                            [1, 2].map((num) => (
                                <li class="flex gap-4">
                                    <div class="mt-1 min-w-[20px]">
                                        <CheckCircle2 className="w-5 h-5 text-yellow-500" />
                                    </div>
                                    <div>
                                        <h4 class="font-bold text-foreground">
                                            {t(
                                                `module.assets.use.${num}.title` as any,
                                            )}
                                        </h4>
                                        <p class="text-sm text-muted">
                                            {t(
                                                `module.assets.use.${num}.desc` as any,
                                            )}
                                        </p>
                                    </div>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
